<%- include('includes/head.ejs') %>

    <body>
        <h1>Edit your Post</h1>
        <div class="post">
            <h3>
                Post id : <%= post.id %>
            </h3>
            <h2 class="user">
                User Name : @<%= post.username %>
            </h2>
            <form method="post" action="/posts/<%= post.id %>?_method=PATCH">
                <textarea name="content" class="content" cols="40" rows="5" autofocus> <%= post.content %></textarea>
                <br>
                <button>
                    <a>
                        Save Changes
                    </a>
                </button>
            </form>
        </div>

    </body>