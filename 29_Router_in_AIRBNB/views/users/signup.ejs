<% layout('/layouts/boilerplate.ejs') %>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">Signup on Wanderlust</h2>
        <div class="col-6 offset-3 ">
            <form action="/signup" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="udername" class="form-label">UserName</label>
                    <input type="text" name="username" placeholder="Enter name" id="udername" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks goods!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" placeholder="Enter email" id="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="passward" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter password" id="passward"
                        class="form-control" required>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>
    </div>