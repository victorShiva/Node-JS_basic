<% layout('layouts/boilerplate.ejs') %>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h2>
                <%=listing.title %>
            </h2>
        </div>
        <div class="card col-6 offset-3 listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p>
                    <%=listing.description %>
                </p>
                <p>
                    &#8377; <%=listing.price.toLocaleString('en-IN') %>
                </p>
                <p>
                    <%=listing.location %>
                </p>
                <p>
                    <%=listing.country %>
                </p>
            </div>
        </div>
        <div class="btns col-6 offset-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary col-4 bg-danger">Edit-Listing</a>
            <form action="/listings/<%= listing._id %>?_method=delete" method="post">
                <button class=" del-btn btn btn-primary ">Delete-Listing</button>
            </form>
        </div>
        <div class="col-8 offset-2 mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="10" rows="5" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please write comment.
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <h3>All Reviews </h3>
            <div class="row">
                <% for(let review of listing.reviews){ %>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">john deo</h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> star
                            </p>
                        </div>
                        <form class="mb-2" method="POST"
                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>